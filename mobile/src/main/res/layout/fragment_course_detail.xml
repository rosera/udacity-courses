<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_course_detail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="5dp"

    tools:context="com.processisolation.rosera.udacitycurated.Main.CourseDetailActivityFragment"
    tools:showIn="@layout/activity_course_detail">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/heading_title"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textSize="16dp"
                android:layout_marginLeft="5dp"
                android:paddingBottom="5dp"
                android:text="Course synopsis"/>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/course_card_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/heading_title"
            card_view:cardUseCompatPadding="true"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="4dp"
            android:clipToPadding="false">

                <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:divider="@drawable/seperator"
                        android:dividerPadding="15dp"
                        android:showDividers="middle">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/courseImageView"
                            android:src="@drawable/placeholder"
                            android:contentDescription="CourseImage"
                            android:scaleType="fitXY"
                            style="?android:attr/buttonBarButtonStyle"
                            android:paddingRight="10dp"
                            android:paddingLeft="10dp"
                            android:paddingBottom="10dp"
                            android:cropToPadding="true"
                            android:layout_width="226dp"
                            android:layout_height="163dp"

                            android:adjustViewBounds="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/title"

                            android:layout_marginTop="10dp"

                            android:layout_marginLeft="5dp"
                            android:paddingLeft="5dp"
                            android:paddingBottom="5dp"
                            android:text="Advanced Android App Development"/>

                        </RelativeLayout>

                            <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/summary"
                            android:paddingLeft="10dp"
                            android:paddingRight="15dp"
                            android:paddingBottom="15dp"
                            android:paddingTop="10dp"
                            android:layout_alignParentRight="@id/courseImageView"
                            android:layout_alignRight="@+id/courseImageView" />

                    </LinearLayout>

                </RelativeLayout>

        </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/details"
                android:textStyle="bold"

                android:layout_below="@+id/course_card_view"
                android:textSize="16dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:paddingBottom="5dp"
                android:text="Course details"/>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/detail_card_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/details"
                android:padding="10dp"

                card_view:cardUseCompatPadding="true"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:divider="@drawable/seperator"
                        android:dividerPadding="15dp"
                        android:showDividers="middle">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/header_expected_learning"
                            android:paddingLeft="5dp"
                            android:layout_marginLeft="5dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="5dp"
                            android:maxWidth="300dp"
                            android:text="Expected learning"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/expected_learning"
                            android:padding="10dp"
                            android:layout_below="@+id/header_expected_learning"
                            android:maxWidth="300dp"
                            android:layout_marginLeft="5dp"
                            android:text="With over 1.4 billion Android devices worldwide and 82% market share, Android offers you unprecedented opportunities to build apps that can be used by people around the world.\n\nThe next billion people coming online will interact with the internet for the very first time on a mobile device. Building for Android gives you the best opportunity to reach these users and make an impact -- both in your community, and on the world."/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/duration"
                            android:layout_margin="10dp"
                            android:paddingLeft="5dp"
                            android:layout_marginLeft="5dp"
                            android:paddingRight="5dp"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            android:gravity="center"
                            android:textAllCaps="true"
                            android:textSize="10sp"
                            android:layout_below="@id/expected_learning"
                            android:text="Duration: 10 Weeks" />

                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/header_syllabus"
                                android:paddingLeft="5dp"
                                android:paddingTop="10dp"
                                android:paddingBottom="5dp"
                                android:layout_below="@+id/expected_learning"
                                android:text="Syllabus"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/syllabus"
                                android:padding="10dp"
                                android:layout_marginRight="5dp"
                                android:layout_below="@+id/header_syllabus"
                                android:text="Lesson 1: JSON Parsing\n \nYou'll learn how to understand and decode one of the most common data formats on the web! \n\nLesson 2: HTTP Networking\n\nYou'll learn how to connect your app to the web. \n\nLesson 3: Threads and Parallelism\n\nYou'll learn how to ask your device to do multiple things at once, allowing you to use the network without interrupting your user."/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/level"
                                android:text="Level: Advanced"
                                android:paddingLeft="5dp"
                                android:paddingBottom="5dp"
                                android:paddingTop="5dp"
                                android:paddingRight="5dp"

                                android:layout_margin="10dp"
                                android:gravity="center"
                                android:textAllCaps="true"
                                android:textSize="10sp"
                                android:layout_below="@id/details"

                                android:layout_alignParentRight="true" />

                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/header_instructors"
                android:textStyle="bold"

                android:layout_below="@+id/detail_card_view"
                android:textSize="16dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:paddingBottom="5dp"
                android:text="Instructor(s)"/>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/instructor_card_view"
                android:layout_width="wrap_content"
                android:layout_below="@+id/header_instructors"
                android:paddingTop="10dp"
                android:layout_height="wrap_content"
                card_view:cardUseCompatPadding="true"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:divider="@drawable/seperator"
                    android:dividerPadding="15dp"
                    android:showDividers="middle">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:maxHeight="250dp"
                        android:maxWidth="200dp"
                        android:id="@+id/instructor_image"
                        android:adjustViewBounds="true"
                        android:cropToPadding="true" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/instructor"
                        android:padding="10dp"
                        android:layout_alignParentLeft="true"
                        android:text="Joanna Smith"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/instructor_bio"
                        android:padding="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/instructor"
                        android:text="Joanna Smith is a Developer Advocate at Google, trying to spread the word about Android best practices.  She’s got fierce Texas pride, a dog that is smaller than most cats, and a staunch dedication to helping developers create excellent Android apps."/>
                    </RelativeLayout>
            </LinearLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/instructor_card_view2"
                android:layout_width="wrap_content"
                android:layout_below="@+id/instructor_card_view"
                android:paddingTop="10dp"
                android:layout_height="wrap_content"
                card_view:cardUseCompatPadding="true"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:divider="@drawable/seperator"
                        android:dividerPadding="15dp"
                        android:showDividers="middle">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:maxHeight="250dp"
                            android:maxWidth="200dp"
                            android:id="@+id/instructor_image2"
                            android:adjustViewBounds="true"
                            android:cropToPadding="true" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/instructor2"
                                android:padding="10dp"
                                android:layout_alignParentLeft="true"
                                android:text="Joanna Smith"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/instructor_bio2"
                                android:padding="10dp"
                                android:layout_alignParentRight="true"
                                android:layout_below="@+id/instructor2"
                                android:text="Joanna Smith is a Developer Advocate at Google, trying to spread the word about Android best practices.  She’s got fierce Texas pride, a dog that is smaller than most cats, and a staunch dedication to helping developers create excellent Android apps."/>
                        </RelativeLayout>
                    </LinearLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>
